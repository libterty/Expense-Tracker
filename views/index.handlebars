<!-- search bar -->
<div class="container search-bar">
  <div class="text-right mt-3">
    <div class="btn-group">
      <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown">
        請選擇排序方式
      </button>
      <div class="dropdown-menu">
        <a class="dropdown-item" href="/search?keyword={{keyword}}&sortKey=rating&sortOrder=desc">餐廳評分：高 > 低</a>
        <a class="dropdown-item" href="/search?keyword={{keyword}}&sortKey=rating&sortOrder=asc">餐廳評分：低 > 高</a>
        <a class="dropdown-item" href="/search?keyword={{keyword}}&sortKey=name&sortOrder=asc">店名：Ａ > Z</a>
        <a class="dropdown-item" href="/search?keyword={{keyword}}&sortKey=name&sortOrder=desc">店名：Ｚ > Ａ</a>
        <a class="dropdown-item" href="/search?keyword={{keyword}}&sortKey=category&sortOrder=asc">類別</a>
        <a class="dropdown-item" href="/search?keyword={{keyword}}&sortKey=location&sortOrder=desc">地區</a>
      </div>
    </div>
  </div>
</div>

<div class="col-3">

</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">

    <div class="col-md-10 col-12 mx-auto">

      <div class="card-columns">
        {{#each trackers}}

        <div class="card mb-3">
          <div class="hovereffect">
            <div class="overlay">
              <a class="info" href="/trackers/{{{this._id}}}/edit">Edit</a>
              <button type="button" class="btn btn-danger" data-toggle="modal" data-target="
                      #trigger-deleteItem-{{this._id}}" style="margin-bottom: 18.5%">
                Delete
              </button>
            </div>
          </div>

          <a href="/trackers/{{this._id}}" class="text-secondary">
            <div class="card-body p-3" style="display: inline;">
              <h6 class="card-title mb-1 ml-3">{{this.name}}</h6>
              <div class="restaurant-category mb-1 ml-3">
                <i class="fas fa-utensils pr-2"></i> {{this.category}}
              </div>

              <span class="badge badge-pill badge-danger font-weight-normal ml-3 mb-2">
                {{this.date}}
                <i class="fas fa-star fa-xs"></i>
              </span>

              <span class="badge badge-pill badge-danger font-weight-normal ml-3 mb-2">
                {{this.amount}} &dollar;
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </a>
        </div>

        <!-- Delete attention -->
        <div class="modal fade" id="trigger-deleteItem-{{this._id}}" tabindex="-1" role="dialog"
          aria-labelledby="deleteModalLabel" aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">執行刪除確認</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                請確定要刪除這筆記錄-{{this.name}}
              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <form action="/trackers/{{this._id}}/delete?_method=DELETE" method="POST" style="display: inline;">
                  <button type="submit" class="btn btn-danger">Delete</button>
                </form>
              </div>
            </div>
          </div>
        </div>


        {{/each}}

      </div>
      <a class="btn btn-primary d-inline-block ml-2" href="/trackers/new">新增支出<i class="fas fa-plus ml-2"></i></a>

    </div>

    <!--searching result no matches-->
    {{#unless trackers}}
    <div class="col-12 col-md-10 mx-auto">
      <img class="rounded mx-auto d-block mb-4 w-100"
        src="https://raw.githubusercontent.com/YunYuLo/restaurant_list/master/public/img/NoRecordFound.png"
        alt="NoMatchImage" />
    </div>
    {{/unless}}

  </div>
</div>